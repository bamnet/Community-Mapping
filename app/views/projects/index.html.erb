<% if user_signed_in? && !current_user.projects.empty?%>
  <div class="main-title">My Projects</div>
  <div class="mc-indent">
    <ul class="big_list">
      <% current_user.projects.each do |project| %>
        <li><%= link_to project.name, project %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="main-title">Projects</div>
<div class="mc-indent">
  <ul class="big_list">
    <% @projects.each do |project| %>
      <li><%= link_to project.name, project %></li>
    <% end %>
  </ul>
  <% if can? :create, Project %>
    <h2><%= link_to 'New Project', new_project_path, :class=>"link-button" %></h2>
  <% end %>
</div>
